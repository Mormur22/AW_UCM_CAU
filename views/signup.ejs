<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">

    <title><%=title %></title>

    <link rel="stylesheet" href="/css/stilo.css" media="screen">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css"
    />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>

  <script>
    $(document).ready(function(){
     
      $("#flexCheckDefault").click(function(){
        if( $(this).is(':checked') ) { //comprobamos que el checkbox está seleccionado
       
        $(".Alumno").hide(); //ocultamos las opciones
        $(".PDI").hide();
        $(".AA").hide();
    } else {
       
        $(".Alumno").show(); //ocultamos las opciones
        $(".PDI").show();
        $(".AA").show();
        }
       
      });
     
     
    });
    </script>

</head>

<body>
    <div class="m-0 row justify-content-center">
        <div class="col-auto p-5 text-center">
            <h1 class="display-1"><strong>UCM - CAU</strong></h1>
        </div>
    </div>

    <div class="container">
        <div class="row vh-80 justify-content-center align-items-center">
            <div class="col-auto bg-light p-5 rounded">
                <form action="/registro" method="POST", enctype="multipart/form-data">
                    <h1 class="display-6 text-center">Registrarse</h1>
                    <!--Los campos vacios se comprueban con el campo 'required'-->
                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="input-group p-2">
                                <input type="text" name="username" class="form-control" id="floatingInput" placeholder="Nombre de usuario">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group p-2">
                                <input type="email" name="correo" class="form-control" id="floatingInput" placeholder="correo@ucm.es">
                                
                            </div>
                        </div>
                    </div>
                    <div class="input-group p-2">
                        <input type="password" name="password" class="form-control" id="floatingInput" placeholder="Contraseña" >
                    </div>
                    <div class="input-group p-2">
                        <input type="password" name="password2" class="form-control" id="floatingInput" placeholder="Confirmar contraseña" >
                    </div>

                    <div class="from-group p-2">
                        <label for="perfil">Perfil Unversitario</label>
                        <select class="from-control" id="perfil" name="perfil">

                            <option class="PAS">PAS</option>

                            <option class="Alumno">Alumno</option>

                            <option class="PDI">PDI</option>

                            <option class="AA">Antiguo Alumno</option>
                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <input class="form-check-input tecnico" name="tecnico-check" type="checkbox" value="yes" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                          Tecnico
                        </label>
                    </div>

                    <div class="input-group p-2">
                        <input type="text" name="numEmp" class="form-control" id="floatingInput" placeholder="NºEmpleado">
                    </div>


                    <div class="input-group mb-3">
                        <input type="file" class="form-control" id="foto">
                    </div>

                    <br>
                    <button type="submit" class="btn btn-primary w-100">Registarse</button>
                    <a href="/" class="link-dark "><h6 class="h6 text-center">Ya estoy registrado</h5></a>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</body>

</html>


