<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">

    <title><%=title %></title>

    <link rel="stylesheet" href="/css/stilo.css" media="screen">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css"
    />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>

  <script>
    $(document).ready(function(){
     
      $("#flexCheckDefault").click(function(){
        if( $(this).is(':checked') ) { //comprobamos que el checkbox está seleccionado
       
        $(".Alumno").hide(); //ocultamos las opciones
        $(".PDI").hide();
        $(".AA").hide();
    } else {
       
        $(".Alumno").show(); //ocultamos las opciones
        $(".PDI").show();
        $(".AA").show();
        }
       
      });
     
     
    });


    function ansValidation(ev) {
        ev.preventDefault
        // there is no input named name
        //var nameValue = document.getElementById("name").value
        var nameValue = "test";
        var passValue = document.getElementById("password").value
        var confpassValue = document.getElementById("password2").value
        // the typeof operator returns a string.
        if(typeof nameValue !== "string"){
            window.alert("Please re-enter your name")
        // we use strict validation ( !== ) because it's a good practice.
        }else if(passValue !== confpassValue) {
        window.alert("Passwords do not match!")
        }
}
    </script>
</head>

<body>
    <div class="m-0 row justify-content-center">
        <div class="col-auto p-5 text-center">
            <h1 class="display-1"><strong>UCM - CAU</strong></h1>
        </div>
    </div>

    <div class="container">
        <div class="row vh-80 justify-content-center align-items-center">
            <div class="col-auto bg-light p-5 rounded">
                
                <% if (msgRegistro) { %>
                    <div class="alert <%=tipoAlert%> alert-dismissible fade show " role="alert">
                        <strong><%=msgRegistro%></strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>


                <form action="/registro" name="signup" method="POST" enctype="multipart/form-data">
                    <h1 class="display-6 text-center">Registrarse</h1>
                    <!--Los campos vacios se comprueban con el campo 'required'-->
                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="input-group p-2">
                                <input type="text" name="username" class="form-control" id="username" placeholder="Nombre de usuario" required>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group p-2">
                                <input type="email" name="correo" class="form-control" id="email" placeholder="correo@ucm.es" required pattern="^[a-zA-Z0-9_.+-]+@(?:(?:[a-zA-Z0-9-]+\.)?[a-zA-Z]+\.)?ucm\.es$">
                                
                            </div>
                        </div>
                    </div>
                    <div class="input-group p-2">
                        <input type="password" name="password" class="form-control" id="password" placeholder="Contraseña" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[a-zA-Z]).{8,16 }$" required title="Las contraseñas deben tener entre 8 y 16 caracteres, al menos un dígito, al menos una minúscula, al menos una mayúscula y al menos un carácter no alfanumérico">
                    </div>
                    <div class="input-group p-2">
                        <input type="password" name="password2" class="form-control" id="password2" placeholder="Confirmar contraseña" required>
                    </div>

                    <div class="input-group p-2">
                        <label class="form-check-label" for="flexCheckDefault">
                            Tecnico
                          </label>
                        <input class="form-check-input tecnico" style="margin-left:1rem" name="tecnico-check" type="checkbox" value="yes" id="flexCheckDefault">
                    </div>

                    <div class="from-group p-2">
                        <label for="perfil">Perfil Unversitario</label>
                        <select class="from-control" id="perfil" name="perfil">

                            <option class="PAS">PAS</option>

                            <option class="Alumno">Alumno</option>

                            <option class="PDI">PDI</option>

                            <option class="AA">Antiguo Alumno</option>
                        </select>
                    </div>


                    <div class="input-group p-2">
                        <input type="text" name="numEmp" class="form-control" id="floatingInput" placeholder="NºEmpleado">
                    </div>


                    <div class="input-group p-2">
                        <input type="file" class="form-control" id="foto" name="foto">
                    </div>

                    <br>
                    <button type="submit" onclick="ansValidation(event)" class="btn btn-primary w-100">Registarse</button>
                    <a href="/" class="link-dark "><h6 class="h6 text-center">Ya estoy registrado</h5></a>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</body>

</html>


