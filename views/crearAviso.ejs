  <div class="modal fade" id="ModalIncidencia" tabindex="-1" aria-labelledby="ModalIncidenciaLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="ModalIncidenciaLabel">Nueva Incidencia</h1>
          <button id="ModalIncidenciaClose" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" data-backdrop="false"></button>
        </div>
        <div class="modal-body">
          <form action="/crearAviso" name="crarAviso" method="POST" enctype="application/x-www-form-urlencoded">
            <input type="hidden" name="tipo" value="incidencia" />
            <div class="row">
              <select id="CategoriaInc" name="categoria" size="1">
                <option value="" selected="selected">-- Seleccionar Categoría --</option>
              </select>
              <select id="SubcategoriaInc" name="subcategoria" size="1">
                <option value="" selected="selected">-- Seleccionar Subategoría --</option>
              </select>            
            </div>
            <div class="mb-3">
              <label for="message-text-inc" class="col-form-label">Observaciones:</label>
              <textarea class="form-control" id="message-text-inc" name="observaciones"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Crear Sugerencia</button>
          </form>
        </div>
      </div>
    </div>
  </div>

